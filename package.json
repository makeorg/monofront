{
  "name": "root",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=14.17 <=16.9",
    "yarn": "~1.22"
  },
  "workspaces": [
    "root",
    "apps/*",
    "api",
    "components",
    "types",
    "assets",
    "utils",
    "ui",
    "store",
    "apimock"
  ],
  "scripts": {
    "postinstall": "if [ -d .git ] && [ -d .husky ]; then husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks; fi",
    "start:widget": "yarn workspace @make.org/widget dev",
    "prod:widget": "yarn workspace @make.org/widget prod",
    "start:front": "yarn workspace @make.org/front dev",
    "start:apiMock": "yarn workspace @make.org/apimock start",
    "cypress:front:run": "./node_modules/.bin/cypress-tags run -b chrome --headless -e TAGS='@front' --config-file apps/front/cypress.json",
    "cypress:front:open": "cypress open --config-file apps/front/cypress.json",
    "cypress:widget:run": "./node_modules/.bin/cypress-tags run -b chrome --headless -e TAGS='@widget' --config-file apps/widget/cypress.json",
    "cypress:widget:open": "cypress open --config-file apps/widget/cypress.json",
    "ci:cypress:front": "start-server-and-test 'yarn workspace @make.org/front server:test' 9009 'yarn cypress:front:run'",
    "ci:cypress:widget": "start-server-and-test 'yarn workspace @make.org/widget server:test' 9008 'yarn cypress:widget:run'"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/enzyme": "^3.10.9",
    "@types/jsdom": "^16.2.13",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-plugin-convert-to-json": "^0.1.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-import-resolver-babel-module": "~5.3.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "~24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "~3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security": "~1.4.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-styled-components": "^7.0.5",
    "jscpd": "^3.3.26",
    "jsdom": "^16.6.0",
    "lerna": "4.0.0",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.1"
  },
  "dependencies": {}
}
