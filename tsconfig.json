{
  "references": [
    { "path": "./apps/widget" },
    { "path": "./apps/front" },
    { "path": "./store" },
    { "path": "./ui" },
    { "path": "./api" },
    { "path": "./assets" },
    { "path": "./components" },
    { "path": "./utils" }
  ],
  "exclude": [
    "**/node_modules", 
    "**/spec.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "compilerOptions": {
    "baseUrl": "./types/index",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "esnext",
    "sourceMap": true,
    "rootDir": ".",
    "paths": {
      "@make.org/widget": ["./apps/widget/*"],
      "@make.org/front": ["./apps/front/*"],
      "@make.org/components": ["./components/*"],
      "@make.org/types": ["./types/*"],
      "@make.org/api": ["./api/*"],
      "@make.org/assets": ["./assets/*"],
      "@make.org/utils": ["./utils/*"],
      "@make.org/ui": ["./ui/*"],
      "@make.org/store": ["./store/*"]
    }
  }
}
