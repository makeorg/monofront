{
  "exclude": [
    "**/node_modules",
    "**/spec.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/bin",
    "**/coverage",
    "./cypress",
    "**/dist",
    "**/Trackers/*.js",
    "**/Svg/*.js",
    "**/*.config.js",
    "**/apimock",
    "**/reports",
    "**/*.md"
  ],
  "compilerOptions": {
    "baseUrl": "./types/index",
    "lib": ["dom", "dom.iterable", "ES2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "target": "ES2021",
    "sourceMap": true,
    "rootDir": ".",
    "paths": {
      "@make.org/widget": ["./apps/widget/*"],
      "@make.org/front": ["./apps/front/*"],
      "@make.org/components": ["./components/*"],
      "@make.org/types": ["./types/*"],
      "@make.org/api": ["./api/*"],
      "@make.org/assets": ["./assets/*"],
      "@make.org/utils": ["./utils/*"],
      "@make.org/ui": ["./ui/*"],
      "@make.org/store": ["./store/*"]
    }
  }
}
