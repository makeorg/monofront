{
  "exclude": [
    "**/node_modules", 
    "**/spec.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/bin"
  ],
  "compilerOptions": {
    "baseUrl": "./types/index",
    "lib": ["dom", "dom.iterable", "ES2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "target": "ES2019",
    "sourceMap": true,
    "rootDir": ".",
    "paths": {
      "@make.org/widget": ["./apps/widget/*"],
      "@make.org/front": ["./apps/front/*"],
      "@make.org/components": ["./components/*"],
      "@make.org/types": ["./types/*"],
      "@make.org/api": ["./api/*"],
      "@make.org/assets": ["./assets/*"],
      "@make.org/utils": ["./utils/*"],
      "@make.org/ui": ["./ui/*"],
      "@make.org/store": ["./store/*"]
    }
  }
}
